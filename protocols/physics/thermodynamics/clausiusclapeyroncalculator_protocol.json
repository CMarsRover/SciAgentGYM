        "properties": {
          "result": {
            "type": "number",
            "description": "对应的饱和蒸气压，单位为Pa"
          }
        }
      },
      "additionalProperties": {
        "function_path": "tools/clausius_clapeyron_temperature/clausius_clapeyron_temperature.py"
      }
    },
    {
      "type": "function",
      "function": {
        "name": "visualize",
        "description": "可视化Clausius-Clapeyron方程曲线。生成包含压力-温度关系和线性化图表的综合可视化。",
        "strict": true,
        "parameters": {
          "type": "object",
          "properties": {
            "P_range": {
              "type": "array",
              "description": "压力范围，格式为[P_min, P_max]，单位为Pa"
            },
            "T_range": {
              "type": "array",
              "description": "温度范围，格式为[T_min, T_max]，单位为K"
            },
            "highlight_pressure": {
              "type": "number",
              "description": "需要高亮显示的压力值，单位为Pa"
